<ResetPasswordScreen>:
    name: 'reset'
    FloatLayout:
        orientation: 'vertical'


        MDLabel:
            text: 'Reset Password'
            font_size: '15'
            color: 'orange'
            pos_hint: {'center_x': 0.5, 'center_y': 1.4}
            size_hint: (0.3, None)

        MDTextField:
            hint_text: 'Insert Email Address'
            pos_hint: {'center_x': 0.5, 'center_y': 0.7}
            size_hint: (0.3, None)

        MDTextField:
            hint_text: 'Enter Phone Number'
            pos_hint: {'center_x': 0.5, 'center_y': 0.65}
            size_hint: (0.3, None)

        MDTextField:
            hint_text: 'Create New Password'
            pos_hint: {'center_x': 0.5, 'center_y': 0.6}
            size_hint: (0.3, None)
